<Window x:Class="Interface_Preprocessor_WPF.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface_Preprocessor_WPF"
        mc:Ignorable="d"
        Title="Сообщение" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   FontSize="20" TextAlignment="Center"/>
        <Button Content="OK" Width="80" Height="30" VerticalAlignment="Bottom" 
                HorizontalAlignment="Center" Margin="0,0,0,20" 
                Click="OkButton_Click"/>
    </Grid>
</Window>
